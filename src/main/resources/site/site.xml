<?xml version="1.0" encoding="UTF-8"?>
<site>
  <config/>

  <mappings>
    <!-- /portal/master/office-league/players/image/<playername> -->
    <mapping controller="/site/controllers/player-image.js" order="10">
      <pattern>/players/image/.*</pattern>
    </mapping>

    <!-- /portal/master/office-league/teams/image/<teamname> -->
    <mapping controller="/site/controllers/team-image.js" order="10">
      <pattern>/teams/image/.*</pattern>
    </mapping>

    <mapping controller="/site/controllers/team-image.js" order="10">
      <pattern>/teams/image/.*</pattern>
    </mapping>

    <!-- mappings for routes handled in Angular -->
    <mapping controller="/site/pages/pwa/pwa.js" order="20">
      <pattern>/teams(/[^/]+)?</pattern>
    </mapping>
    <mapping controller="/site/pages/pwa/pwa.js" order="20">
      <pattern>/players(/[^/]+)?</pattern>
    </mapping>
    <mapping controller="/site/pages/pwa/pwa.js" order="20">
      <pattern>/leagues(/[^/]+)?</pattern>
    </mapping>
    <mapping controller="/site/pages/pwa/pwa.js" order="20">
      <pattern>/games(/[^/]+)?</pattern>
    </mapping>

  </mappings>

</site>
